BIN = Horror Lighting
CC = g++
FLAGS = -Wall  -g -std=c++0x 
INC = -I common/include
LOC_LIB = common/win32/libglew32.dll.a common/win32/glfw3dll.a 
SYS_LIB = -lstdc++ -lOpenGL32 -L ./ -lflew32 -lglfw3 -lGL -lm -lSOIL
SRC = main.cpp 

	


all:
	@echo
	@echo ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	@echo ~~~~~~~~~~~~~~~~~~~~~~~~~~~Building WINDOWSS 32-bit~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	@echo ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	@echo
	${CC} ${FLAGS} -o ${BIN} ${SRC} ${INC} ${LOC_LIB} ${SYS_LIB}

clean: 
	@echo cleaning files
	rm Horror Lighting

